@page "{id:Guid}"
@model IngredientFormModel
@{
}

<div class="col-sm-6">
    <h2>Indtast mængde</h2>

    <form method="post">
        <div>
            <label>Navn</label>
            <input readonly asp-for="Ingredient.Food.Name" class="form-control">
        </div>
        <div class="form-group">
            <label>Mængde</label>
            <div class="row">
                <div class="col-sm-9">
                    <input asp-for="Ingredient.Quantity" class="form-control">
                </div>
                <div class="col-sm-3">
                    <select class="form-control" asp-for="Ingredient.QuantityType" asp-items="@Model.ListOfQuantityTypes"></select>
                </div>
            </div>
        </div>

        <button type="submit" asp-page-handler="AddIngredient" class="btn btn-danger">Tilføj ingrediens</button>
    </form>
</div>

<style>
    .btn-danger {
        margin-top:30px;
    }

    label {
        margin-top:20px;
    }

    h2 {
        margin-bottom:10px;
    }

</style>



